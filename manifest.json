{
    "name": "Show Pony",
    "description": "Focus your audience on what matters",
    "version": "0.1",
    "manifest_version": 3,

    "action": {
      "default_title": "Start Show Pony",
      "default_icon": {
        "16": "/images/sp-bw-16x16.png",
        "32": "/images/sp-bw-32x32.png",
        "48": "/images/sp-bw-32x32.png",
        "128": "/images/sp-bw-32x32.png"
      }
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },

    "icons": {
        "16": "/images/sp-bw-16x16.png",
        "32": "/images/sp-bw-32x32.png",
        "48": "/images/sp-bw-32x32.png",
        "128": "/images/sp-bw-32x32.png"
    },
    "options_page": "options.html"
  }